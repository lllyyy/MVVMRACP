platform :ios, '8.0'
inhibit_all_warnings!

target 'LProject' do
  # use_frameworks!

  # Pods for LProject
  pod 'AFNetworking' # 网络请求
  pod 'SDWebImage'
  pod 'MJRefresh'
  pod 'MJExtension'#字典转模型
  pod 'DZNEmptyDataSet'
  pod 'IQKeyboardManager'
  pod 'CocoaLumberjack'#打印log
  pod 'Reachability'# 网络监控
  pod 'Masonry'
  pod 'ReactiveCocoa', '2.5'
  pod 'MLeaksFinder'
  pod 'CYLTabBarController'
  
  pod 'hprose' 
  
  # 全局滑动
  pod 'FDFullscreenPopGesture'
  # 蒙版
  pod 'MBProgressHUD'
 
  pod 'YYKit'
  # toast
  pod 'Toast'
  # 三级联动 时间 地址
  pod 'MOFSPickerManager'

  # 二维码
  pod 'HMQRCodeScanner'

  # 照片
  pod 'TZImagePickerController'

  # 进度
  pod 'M13ProgressSuite'

  # 指纹识别
#  pod 'TDTouchID'

  # 数据存储
  pod 'GVUserDefaults'
  
  #数据库
  pod 'FMDB'
   
  pod 'UMCCommon'
  pod 'UMCSecurityPlugins'
  pod 'UMCAnalytics'
  pod 'UMCShare/UI'

  # 集成微信(精简版0.2M)
  pod 'UMCShare/Social/ReducedWeChat'
 
  # 集成QQ/QZone/TIM(精简版0.5M)
  pod 'UMCShare/Social/ReducedQQ'
 
  # 集成新浪微博(精简版1M)
  pod 'UMCShare/Social/ReducedSina'
 
  
end

